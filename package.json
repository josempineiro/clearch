{
  "name": "clearq",
  "version": "1.0.0",
  "description": "Front end clean arquitecture proof of concept",
  "workspaces": [
    "packages/**"
  ],
  "main": "index.js",
  "scripts": {
    "test": "test",
    "dev:mfe-pokemon": "cd packages/mfe-pokemon && npm run deploy",
    "dev:bff-pokemon": "cd packages/bff-pokemon && npm run start",
    "dev:host": "cd packages/host && npm run dev",
    "dev": "npm-run-all -p dev:bff-pokemon dev:mfe-pokemon dev:host",
    "start:mfe-pokemon": "cd packages/mfe-pokemon && npm run deploy",
    "start:bff-pokemon": "cd packages/bff-pokemon && npm run start",
    "start:host": "cd packages/host && npm run start",
    "start": "npm-run-all -p start:bff-pokemon start:mfe-pokemon start:host"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josempineiro/clearq.git"
  },
  "keywords": [
    "front",
    "clean",
    "arquitecture",
    "poc"
  ],
  "author": "Jose Pi√±eiro",
