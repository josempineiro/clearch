  "bugs": {
    "url": "https://github.com/josempineiro/clearq/issues"
  },
  "homepage": "https://github.com/josempineiro/clearq#readme",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.3"
  }
}
