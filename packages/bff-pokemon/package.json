{
  "name": "bff-pokemon",
  "version": "1.0.0",
  "description": "Backend for frontend pokemon",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "npm run compile",
    "pre:compile": "rm -rf dist",
    "compile": "npm run pre:compile && tsc && npm run post:compile",
    "post:compile": "cp -r src/schema.graphql dist/schema.graphql",
    "dev": "nodemon src/index",
    "start": "npm run compile && node --experimental-specifier-resolution=node ./dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.0.0",
    "graphql": "^16.6.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^18.6.3",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  }
}
